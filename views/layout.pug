doctype html
html
  head
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js')
    // Latest compiled and minified CSS
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css')
    link(rel='stylesheet', href='https://fonts.googleapis.com/icon?family=Material+Icons')
    link(href='https://fonts.googleapis.com/css?family=Poppins&display=swap', rel='stylesheet')
    // Optional theme
    block styles
    link(rel='stylesheet', href='/css/style.css')
    link(rel='manifest', href='/manifest.json')
    // IOS Support
    link(rel='apple-touch-icon', href='/img/icons/icon-72x72.png')
    link(rel='apple-touch-startup-image', media='screen and (device-width: 320px) and (device-height: 568px) and (-webkit-device-pixel-ratio: 2) and (orientation: landscape)', href='/img/med.png')
    meta(name='apple-mobile-web-app-capable', content='yes')
    meta(name='apple-mobile-web-app-title', content='Med Reminder')
    meta(name='apple-mobile-web-app-status-bar', content='#aa7700')
    meta(name='theme-color', content='#FFE1C4')


    title Medications
  body.grey.lighten-4
    nav.z-depth-0
      .nav-wrapper.container
        a(href='/')
          | MEDIABETES
          span REMINDER
        span.right.grey-text.text-darken-1
          i.material-icons.sidenav-trigger(data-target='side-menu') menu

    ul#side-menu.sidenav.side-menu
     if user
        li
          a.subheader MEDIABETES REMINDER
        li
          a.waves-effect(href='/') Home
        li
          a.waves-effect(href='/users/about') About
        li
          a.waves-effect(href='/users/learn') Type 2 diabetes
        li
        li
          a.waves-effect(href='/appointments/diary') My Diary
        if user.isAdmin
          li
            a.waves-effect(href='/appointments/create') Add Reminder
        li
          a.waves-effect(href='/users/logout') Logout
        li
          .divider
        li
          a.waves-effect(href='/users/contact')
            i.material-icons mail_outline
            | Contact
     else 
      li
          a.subheader MEDIABETES REMINDER
      li
          a.waves-effect(href='/') Home
      li
          a.waves-effect(href='/users/about') About
      li
          a.waves-effect(href='/users/learn') Type 2 diabetes
      li
          a.waves-effect(href='/users/login') Login
      li
          a.waves-effect(href='/users/register') Register 
      li
        .divider
      li
        a.waves-effect(href='/users/contact')
          i.material-icons mail_outline
          | Contact
    .container
      block content
    .container
      != messages('message', locals)
      if errors
        each error, i in errors
          div(class="alert alert-danger") #{error.msg}
     
      // /row
      script(src='/loader.js')
      script(type='text/javascript', src='https://code.jquery.com/jquery-2.1.1.min.js')
      script(src='https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js')
      script(src='https://cdnjs.cloudflare.com/ajax/libs/parsley.js/2.1.2/parsley.min.js')
      script(src='/js/main.js')
      block scripts

      
