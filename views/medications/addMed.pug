extends ../layout

block content
    if user.isAdmin
        h1 Add Medication
        form(method = 'POST', action='/medications')
            #form-group
            label Medication Name:
            input.form-control(name="name", type ='text')
            #form-group
            label Medication Image (Optional):
            input.form-control(name="image", type ='file')
            #form-group
            label Pill Quantity (Optional):
            input.form-control(name="quantity", type ='number')
            br
            input.btn.btn-primary(type='submit', value='submit')
    else
        h5.center Only admin can acess this page