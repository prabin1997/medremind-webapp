extends layout

block content
  h1 Register
  a(href="/users/adminReg") Are you a admin? Click here to register
  form(method = 'POST', action='/users/register')
    #form-group
       label Name:
       input.form-control(name="name", type ='text')
    #form-group
       label Username:
       input.form-control(name="username", type ='text')
    #form-group
       label Password:
       input.form-control(name="password", type ='password')
    #form-group
       label Confirm:
       input.form-control(name="password2", type ='password')
    #form-group
       label Create a 4 digit code (Provide this code to your Admin):
       input.form-control(name="adminReq", type ='number')
    br
    input.btn.btn-primary(type='submit', value='submit')
  
    
    